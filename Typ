<body>

<div class="container">
    <h2>글자수 계산기</h2>
    <textarea id="textInput" placeholder="이곳에 내용을 입력하거나 붙여넣기 하세요."></textarea>
    
    <div class="counter-box">
        <div class="count-item">
            <span>공백 포함</span>
            <strong id="charCount">0</strong>자
        </div>
        <div class="count-item">
            <span>공백 제외</span>
            <strong id="charCountNoSpace">0</strong>자
        </div>
    </div>
</div>

<script>
    const textInput = document.getElementById('textInput');
    const charCount = document.getElementById('charCount');
    const charCountNoSpace = document.getElementById('charCountNoSpace');

    textInput.addEventListener('input', function() {
        const text = this.value;

        // 1. 공백 포함 글자 수
        charCount.textContent = text.length;

        // 2. 공백 제외 글자 수 (정규식으로 모든 공백 제거 후 길이 측정)
        const textWithoutSpace = text.replace(/\s/g, ''); 
        charCountNoSpace.textContent = textWithoutSpace.length;
    });
</script>

</body>
